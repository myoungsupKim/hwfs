function Common_Btn_common_OnClick(obj:Button, e:ClickEventInfo)
{
	switch(obj.name)
	{
		case "btn_Confirm":
			fn_Confirm();
			break;
		case "btn_Copy":
			fn_Copy();
			break;
		case "btn_Reset":
			fn_Reset();
			break;
		case "btn_StdRecipeSearch":
			fn_StdRecipeSearch();
			break;
        default :
            break;
	}

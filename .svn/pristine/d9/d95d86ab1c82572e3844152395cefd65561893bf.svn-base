<?xml version="1.0" encoding="euc-kr"?>
<query dynamic="true">
	<type>select</type>
	<description><![CDATA[]]></description>
	<reload>true</reload>
	<monitoring>true</monitoring>
	<result-count>1</result-count>
	<statement>
SELECT ORDERSEQ,
       ORGID,
       GUBUN,
       TRID,
       TRDATE,
       TYPE_NAME,
       SUBINV_NAME,
       CUSTNM,
       TRDESC,
       TOT_AMT,
       LINE_AMT,
       ALT_AMT,
       JANAMT
  FROM (
        SELECT 'A' ORDERSEQ,               
               #TRID# ORGID,
               '입금->매출' GUBUN,
               A.RCP_ID TRID,
               A.RCP_DATE  TRDATE,
               B.TYPE_NAME,
               C.SUBINV_NAME,
               D.CUSTNM,
               A.RCP_DESC TRDESC,
               (SELECT NVL(AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) TOT_AMT,
               NVL(E.AMT, 0) LINE_AMT,
               (SELECT NVL(ALT_AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) ALT_AMT,
               (SELECT NVL(AMT, 0) - NVL(ALT_AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) JANAMT
          FROM MAS_RCP A,
               MAS_TYPE B,
               HLDC_PO_SUBINVENTORY C,
               HLDC_ST_CUST D,
               MAS_TRX_LINE E
        WHERE (A.RCP_TYPE    = B.TYPE_CD)
        AND   (A.SUBINV_CODE = C.SUBINV_CODE(+))
        AND   (A.CUSTCD      = D.CUSTCD(+))
        AND   (A.RCP_ID      = E.RCP_ID)
        AND   (E.TRX_ID      = #TRID#)
        AND   (E.SOURCE_FR = 'RCP' AND E.SOURCE_TO = 'TRX')       
        UNION ALL
        SELECT 'B' ORDERSEQ,  
               #TRID# ORGID,
               (SELECT CODE_NAME FROM SCC_COMMON_CODE WHERE GROUP_CODE = 'MA0102' AND CODE = A.ADJ_KIND) GUBUN,
               A.LINE_ID    TRID,
               A.ADJ_DATE   TRDATE,
               B.TYPE_NAME,
               C.SUBINV_NAME,
               D.CUSTNM,
               A.ADJ_DESC   TRDESC,
               (SELECT NVL(AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) TOT_AMT,
               NVL(A.AMT, 0) LINE_AMT,
               (SELECT NVL(ALT_AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) ALT_AMT,
               (SELECT NVL(AMT, 0) - NVL(ALT_AMT, 0) FROM MAS_TRX WHERE TRX_ID = #TRID#) JANAMT
          FROM (SELECT A.ADJ_DATE, A.ADJ_TYPE, A.ADJ_KIND, A.SUBINV_CODE, A.CUSTCD, A.ADJ_DESC, B.LINE_ID, B.ORG_TRX_ID TRX_ID, B.AMT FROM MAS_TRX_SUBST A, MAS_TRX_SUBST_LINE B WHERE A.SUBST_ID = B.SUBST_ID) A,
               MAS_TYPE B,
               HLDC_PO_SUBINVENTORY C,
               HLDC_ST_CUST D
        WHERE (A.ADJ_TYPE    = B.TYPE_CD)
        AND   (A.SUBINV_CODE = C.SUBINV_CODE(+))
        AND   (A.CUSTCD      = D.CUSTCD(+))
        AND   (A.TRX_ID      = #TRID#)
        )
ORDER BY ORDERSEQ, TRDATE, ORGID, TRID
</statement>
	<input default-name="ds_cond">
		<col name="TRID" size="" type="NUMERIC" description="" /> 
	</input>
	<output default-name="ds_listHistory">
<col name="ORDERSEQ" size="255" type="VARCHAR" description="" />
<col name="ORGID" size="" type="NUMERIC" description="" />
<col name="GUBUN" size="255" type="VARCHAR" description="" />	
<col name="TRID" size="" type="NUMERIC" description="" />
<col name="TRDATE" size="255" type="VARCHAR" description="" />
<col name="TYPE_NAME" size="255" type="VARCHAR" description="" />
<col name="SUBINV_NAME" size="255" type="VARCHAR" description="" />
<col name="CUSTNM" size="255" type="VARCHAR" description="" />
<col name="TRDESC" size="255" type="VARCHAR" description="" />
<col name="TOT_AMT" size="" type="NUMERIC" description="" />
<col name="LINE_AMT" size="" type="NUMERIC" description="" />
<col name="ALT_AMT" size="" type="NUMERIC" description="" />
<col name="JANAMT" size="" type="NUMERIC" description="" />
</output>
</query>
								logger.debug("unitPrice : "+BigDecimal.valueOf(Double.valueOf(rowData.get("unitPrice").toString())));	//구매단가
								double poamt = Double.valueOf(rowData.get("procRtQty").toString()) * Double.valueOf(rowData.get("unitPrice").toString());

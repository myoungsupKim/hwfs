<?xml version="1.0" encoding="euc-kr"?>
<query dynamic="true">
	<type>select</type>
	<description><![CDATA[단일 표준 레시피조회]]></description>
	<reload>true</reload>
	<monitoring>true</monitoring>
	<result-count>1</result-count>
	<statement>
select	A.RECIPE_CD,
	A.RECIPE_NAME,
	A.RECIPE_CLASS,
	A.RECIPE_TYPE,
	A.CUISINE_TYPE,
	A.MAIN_ITEM_CODE1,
	A.MAIN_ITEM_CODE2,
	A.COOK_TOOL1,
	A.COOK_TOOL2,
	A.RECIPE_COLOR,
	A.RECIPE_SHAPE,
	A.RECIPE_TASTE,
	A.RECIPE_FEEL,
	A.RECIPE_TEMPER,
	A.SPRING_YN,
	A.SUMMER_YN,
	A.AUTUMN_YN,
	A.WINTER_YN,
	A.RESP_NUT1,
	A.RESP_NUT2,
	A.USE_TOOL,
	A.VALID_TIME,
	A.DISPLAY_METHOD,
	A.SALE_UOM,
	A.SALE_PRICE,
	A.COST_RATE,
	A.CORE_TEMPER_YN,
	A.GOODS_FEATURE,
	A.PHF_MGMT1,
	A.PHF_MGMT2,
	A.PHF_MGMT3,
	A.PHF_MGMT4,
	A.PHF_MGMT5,
	A.COOK_OPRN,
	A.PHOTO_PATH,
	A.USE_YN,
	A.ATTR01,
	A.ATTR02,
	A.ATTR03,
	A.ATTR04,
	A.ATTR05,
	A.ATTR06,
	A.ATTR07,
	A.ATTR08,
	A.ATTR09,
	A.ATTR10,
	A.CUSER,
               E.NM_KOR,
	A.CDATE,
	A.UUSER,
	A.CDATE,
	A.UDATE,
              A.PHF,
	SUM(ROUND(B.NEED_QTY * (NVL(C.MARGIN_PRICE,0) / D.KG_CONVERT_RATE / 1000) ) )                 RECIPE_WONGA
  from	FSR_STD_RECIPE_MST A ,
	FSR_STD_RECIPE_ITEM B ,
	FSI_STD_PRICE C ,
	(
		SELECT	ITEM_CODE,
			KG_CONVERT_RATE
		FROM	HLDC_PO_ITEM_MST
		WHERE	ITEM_CODE BETWEEN '010100000001' AND '019999999999'
	) D,
                SCC_USERINFO E
  WHERE	A.RECIPE_CD = B.RECIPE_CD
  AND B.ITEM_CODE = C.ITEM_CODE(+)
  AND B.ITEM_CODE = D.ITEM_CODE
  AND A.CUSER= E.SABUN(+)
  <isNotNull col="RECIPE_CD">
  AND A.RECIPE_CD=#RECIPE_CD#
  </isNotNull>
 GROUP BY A.RECIPE_CD,
	A.RECIPE_NAME,
	A.RECIPE_CLASS,
	A.RECIPE_TYPE,
	A.CUISINE_TYPE,
	A.MAIN_ITEM_CODE1,
	A.MAIN_ITEM_CODE2,
	A.COOK_TOOL1,
	A.COOK_TOOL2,
	A.RECIPE_COLOR,
	A.RECIPE_SHAPE,
	A.RECIPE_TASTE,
	A.RECIPE_FEEL,
	A.RECIPE_TEMPER,
	A.SPRING_YN,
	A.SUMMER_YN,
	A.AUTUMN_YN,
	A.WINTER_YN,
	A.RESP_NUT1,
	A.RESP_NUT2,
	A.USE_TOOL,
	A.VALID_TIME,
	A.DISPLAY_METHOD,
	A.SALE_UOM,
	A.SALE_PRICE,
	A.COST_RATE,
	A.CORE_TEMPER_YN,
	A.GOODS_FEATURE,
	A.PHF_MGMT1,
	A.PHF_MGMT2,
	A.PHF_MGMT3,
	A.PHF_MGMT4,
	A.PHF_MGMT5,
	A.COOK_OPRN,
	A.PHOTO_PATH,
	A.USE_YN,
	A.ATTR01,
	A.ATTR02,
	A.ATTR03,
	A.ATTR04,
	A.ATTR05,
	A.ATTR06,
	A.ATTR07,
	A.ATTR08,
	A.ATTR09,
	A.ATTR10,
	A.CUSER,
	A.CDATE,
	A.UUSER,
                A.UDATE,
                E.NM_KOR,
              A.PHF	</statement>
	<input default-name="ds_cond">
		<col name="RECIPE_CD" size="255" type="VARCHAR" description="" /> 
	</input>
	<output default-name="ds_Recipe">
	</output>
</query>

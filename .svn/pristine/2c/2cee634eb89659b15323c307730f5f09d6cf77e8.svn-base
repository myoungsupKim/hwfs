function btn_imgFile_onclick(obj:Button,  e:ClickEventInfo)
{
	var objFD = new FileDialog();
	objFD.defaultextention = true;
	objFD.filter = "image files (*.bmp;*.jpg;*.jpeg;*.gif;*.png)|*.bmp;*.jpg;*.jpeg;*.gif;*.png";

	var objVFile1 = objFD.open("file open", FileDialog.LOAD, "%MYDOCUMENT%");
	
	if (objVFile1) {
		objVFile1.open(VirtualFile.openRead | VirtualFile.openBinary);
	} else {
		return false;
	}

	// 파일크기 100KB 제한
	if (objVFile1.getFileSize() > 200000) {
		gfn_alert("파일크기가 200KB를 초과하였습니다!", "", "A");
		return;
	}
	
	// 파일명에 한글이 있을경우 제한을 둠
	if (gfn_exitKoreanChar(objVFile1.filename)) {
		gfn_alert("파일명이 영문 및 숫자로 조합된 이미지 파일만 등록 가능합니다.", "", "A");
		return;
	}
	
	var bData = new Buffer(objVFile1.read(objVFile1.getFileSize()));

	ds_list.setColumn(ds_list.rowposition, "imgFileNm", objVFile1.filename);
	//ds_list.setColumn(ds_list.rowposition, "imgFilePath", objVFile1.fullpath);
	ds_list.setColumn(ds_list.rowposition, "imgFile", bData.data);
	img_pdfCoverImg.image = objVFile1.fullpath;

    objVFile1.close();    
 
}


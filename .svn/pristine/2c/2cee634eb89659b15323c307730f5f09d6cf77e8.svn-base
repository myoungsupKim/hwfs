/*----------------------------------------------------------------------------------------------
 * 설명      : 조회 버튼 클릭 시 (필수-공통버튼에서 호출됨)
 *---------------------------------------------------------------------------------------------*/
function fn_search()
{	
	// v_ds_check 미사용시 변경사항 체크
	if (gfn_dsIsUpdated(ds_list) == true || gfn_dsIsUpdated(ds_file) == true) 
	{
		var retValue = gfn_confirm("confirm.before.search");	// 검색을 진행하면 변경된 데이터가 사라집니다. 계속 진행 하시겠습니까?
		if (retValue == false) return;
	}
	
	// 조회시 Validation Check
	if (gfn_validCheck(ds_search, ds_searchValid, true) == false) return;
	
	 // Dataset을 초기화한다.
    ds_list.clearData();
    
    var strSvcID    = "search";
    var strURL      = "ms/mef/fileUploadEfoodist/selectAttachFile.xdo";
    var strInDs     = "ds_list=ds_search";
    var strOutDs    = "ds_list=ds_list ds_file=ds_file";
    var strArg      = "edtRgstSeq=" + wrapQuote(gfn_transNullToEmpty(edt_rgstSeq.value));
	var strCallback = "fn_callBack";
    var bAsync      = true;

    gfn_transaction(this, strSvcID, strURL, strInDs, strOutDs, strArg, strCallback, bAsync);
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 신규 버튼 클릭 시 (필수-공통버튼에서 호출됨)
 *---------------------------------------------------------------------------------------------*/
function fn_insert()
{	
	ds_list.clearData(); 
	this.edt_rgstSeq.value = "";
	//this.edt_title.value = "";
	//this.cbo_gubun.value = "01";
	
	var nRow = ds_list.addRow();
	
	ds_list.setColumn(nRow, "reqSeq", gfn_subStr(fv_sToday,0,6));
	ds_list.setColumn(nRow, "cdate", fv_sToday);
	ds_list.setColumn(nRow, "cuser", g_Name);
	
	ds_file.clearData();
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 삭제 버튼 클릭 시 (필수-공통버튼에서 호출됨)
 *---------------------------------------------------------------------------------------------*/
function fn_delete()
{
	var nRow = ds_list.rowposition;
	
	if(ds_list.rowposition == -1) 
	{
		gfn_alert("msg.err.grid.noselect", "삭제할 row");	// 선택된 항목이 없습니다.
		return;
	}

	var rtVal = gfn_confirm("confirm.before.delete");	// 선택된 자료를 삭제 하시겠습니까?
	if (rtVal == true) 
	{	
		ds_list.deleteRow(nRow);
		this.btn_fileDel_onclick();
	}	
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 저장 버튼 클릭 시 (필수-공통버튼에서 호출됨)
 *---------------------------------------------------------------------------------------------*/
function fn_save()
{
	// v_ds_check 미사용시 변경사항 체크
	if (gfn_dsIsUpdated(ds_list) == false) 
	{
		gfn_alert("msg.save.nochange");	// 변경된 내역이 없습니다.
		return;
	}
		
	// 저장시 Validation Check	
	if (gfn_validCheck(ds_list, ds_listValid) == false)	return;
	
	// 첨부 파일 추가가 있을때만
	if(ObjAtchFile.fn_countDs("insert") > 0)
	{	
		var rtn = ObjAtchFile.fn_uploadFile();		
		if (rtn < 0)	return;
	}		
	
	ds_list.setColumn(0, "reqSeq", gfn_subStr(cal_reqSeq.value,0,6));	
	ds_list.setColumn(0, "title", gfn_subStr(cal_reqSeq.value,0,4) + "년" + gfn_subStr(cal_reqSeq.value,4,2) + "월호");	
	ds_list.setColumn(0, "fileNm", ds_file.getColumn(0, "orgnlFileNm"));
	ds_list.setColumn(0, "filePath", ds_file.getColumn(0, "orgnlPath"));
		
	var strSvcID    = "save";
    var strURL      = "ms/mef/fileUploadEfoodist/saveAttachFile.xdo";
    var strInDs     = "ds_list=ds_list:U ds_file=ds_file:A";	//(중요)첨부파일 참조일련번호로 인해 ds_list:A, ds_file:A로 설정해야 함
    var strOutDs    = "ds_file=ds_file";
    var strArg      = "";
    var strCallback = "fn_callBack";
    var bAsync      = true;
    
    gfn_transaction(this, strSvcID, strURL, strInDs, strOutDs, strArg, strCallback, bAsync);
}

/************************************************************************************************
 * TRANSACTION 및 CallBack 영역 (필수)
************************************************************************************************/
/*----------------------------------------------------------------------------------------------
 * 설명      : 트랜잭션 콜백 함수 (필수)
 *---------------------------------------------------------------------------------------------*/
function fn_callBack(strSvcID, nErrorCode, strErrorMsg)
{
	// 에러시 gfn_callBack에서 메시지 제공, 화면별 특정 에러 발생시에만 사용하세요.
	if (nErrorCode < 0) 
	{
		return;
	}
	
    switch(strSvcID)
    {
		// 조회
        case "search" :
             
            break;
          
        case "save" :
			// 첨부파일 저장시 첨부파일 참조일련번호가 전달됨
			if(!gfn_isNull(fv_RefSeq)) ds_list.setColumn(ds_list.rowposition,"refSeq",fv_RefSeq);
			
			gfn_alert("msg.save.success");	// 저장 되었습니다.
			
			//저장후 초기화
			this.ds_list.clearData();
			this.ds_file.clearData();
			
			break;    
    }
}


<?xml version="1.0" encoding="UTF-8"?>
<hqml xmlns="http://hone.hanwha.co.kr/schema/hqml" name="rc.rcm.closeMgntDtlPopDAO">
    <desc>일마감 정보 HQML Query</desc>

    <!-- 일마감 정보를 조회한다. -->
    <statement name="selectList" type="select">
        /*+ com.hwfs.rc.rcm.dao.CloseMgntDtlPopDAO.selectList */
        <![CDATA[
            SELECT  SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = SM.UPJANG_CD
                    ) UPJANG_NM
                    ,SM.RECEIPT_NUM
                    ,NVL((
                    SELECT  SUM(SD.SAL_AMT)
                    FROM    SLA_IF_UPJANG_SALS_DETAIL SD
                    WHERE   SM.OCCUR_DATE   = SD.OCCUR_DATE
                    AND     SM.SYS_CLASS    = SD.SYS_CLASS
                    AND     SM.UPJANG_CD    = SD.UPJANG_CD
                    AND     SM.RECEIPT_NUM  = SD.RECEIPT_NUM
                    AND     SD.RECD_STATUS  = 'L'
                    ),0) SAL_AMT
                    ,NVL((
                    SELECT  SUM(SP.AMT)
                    FROM    SLA_IF_UPJANG_PAYMENT SP
                    WHERE   SM.OCCUR_DATE   = SP.OCCUR_DATE
                    AND     SM.SYS_CLASS    = SP.SYS_CLASS
                    AND     SM.UPJANG_CD    = SP.UPJANG_CD
                    AND     SM.RECEIPT_NUM  = SP.RECEIPT_NUM
                    AND     SP.RECD_STATUS  = 'L'
                    AND     SP.PAY_CD NOT IN ('2')
                    ),0) PAY_AMT
                    ,NVL((
                    SELECT  SUM(CA.USE_AMT)
                    FROM    SLA_IF_CARD_APPRV_INFO CA
                    WHERE   SM.OCCUR_DATE   = CA.OCCUR_DATE
                    AND     SM.SYS_CLASS    = CA.SYS_CLASS
                    AND     SM.UPJANG_CD    = CA.UPJANG_CD
                    AND     SM.RECEIPT_NUM  = CA.RECEIPT_NUM
                    AND     CA.RECD_STATUS  = 'L'
                    AND     CA.DEAL_TYPE    = '1'
                    ),0) USE_AMT
            FROM    SLA_IF_UPJANG_SALS_MST SM
            WHERE   SM.RECD_STATUS  = 'L'
            AND     SM.OCCUR_DATE   = :occurDate
            AND     SM.SYS_CLASS    = :sysClass
            AND     SM.MU_CD        = :muCd
        <#if tmCd?has_content>
            AND     SM.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     B.TM_CD = :tmCd
                            )
        </#if>
        <#if ccCd?has_content>
            AND     SM.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(SM.UPJANG_CD) = :upjangCd
        </#if>
            ORDER BY SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,SM.RECEIPT_NUM
        ]]>
    </statement>

    <!-- 일마감 매출정보를 조회한다. -->
    <statement name="selectSalsList" type="select">
        /*+ com.hwfs.rc.rcm.dao.CloseMgntDtlPopDAO.selectSalsList */
        <![CDATA[
            SELECT  SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = SM.UPJANG_CD
                    ) UPJANG_NM
                    ,SM.RECEIPT_NUM
                    ,SD.SALS_CLASS
                    ,(
                    SELECT  DISTINCT ST.SALS_TYPE_NM
                    FROM    SLA_SALES_SALS_TYPE ST
                    WHERE   ST.SYS_CLASS = SD.SYS_CLASS
                    AND     ST.SALS_TYPE = SD.SALS_CLASS
                    ) SALS_CLASS_NM
                    ,NVL(SD.SAL_AMT,0) SAL_AMT
            FROM    SLA_IF_UPJANG_SALS_MST SM
                    ,SLA_IF_UPJANG_SALS_DETAIL SD
            WHERE   SM.OCCUR_DATE = SD.OCCUR_DATE
            AND     SM.SYS_CLASS = SD.SYS_CLASS
            AND     SM.UPJANG_CD = SD.UPJANG_CD
            AND     SM.RECEIPT_NUM = SD.RECEIPT_NUM
            AND     SM.RECD_STATUS = 'L'
            AND     SD.RECD_STATUS = 'L'
            AND     SM.OCCUR_DATE   = :occurDate
            AND     SM.SYS_CLASS    = :sysClass
            AND     SM.MU_CD        = :muCd
        <#if tmCd?has_content>
            AND     SM.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     B.TM_CD = :tmCd
                            )
        </#if>
        <#if ccCd?has_content>
            AND     SM.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(SM.UPJANG_CD) = :upjangCd
        </#if>
            ORDER BY SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,SM.RECEIPT_NUM
                    ,SD.SALS_CLASS
        ]]>
    </statement>
    
    <!-- 일마감 매출정보를 조회한다(사업장일마감용). -->
    <statement name="selectSalsListMag" type="select">
        /*+ com.hwfs.rc.rcm.dao.CloseMgntDtlPopDAO.selectSalsList */
        <![CDATA[
            SELECT  SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = SM.UPJANG_CD
                    ) UPJANG_NM
                    ,SM.RECEIPT_NUM
                    ,SD.SALS_CLASS
                    ,(
                    SELECT  DISTINCT ST.SALS_TYPE_NM
                    FROM    SLA_SALES_SALS_TYPE ST
                    WHERE   ST.SYS_CLASS = SD.SYS_CLASS
                    AND     ST.SALS_TYPE = SD.SALS_CLASS
                    ) SALS_CLASS_NM
                    ,NVL(SD.SAL_AMT,0) SAL_AMT
                    ,SM.DDDD_CLOSE_YN  --마감여부 필드 추가 2018.07.24 김호석
            FROM    SLA_IF_UPJANG_SALS_MST SM
                    ,SLA_IF_UPJANG_SALS_DETAIL SD
            WHERE   SM.OCCUR_DATE = SD.OCCUR_DATE
            AND     SM.SYS_CLASS = SD.SYS_CLASS
            AND     SM.UPJANG_CD = SD.UPJANG_CD
            AND     SM.RECEIPT_NUM = SD.RECEIPT_NUM
            AND     SM.RECD_STATUS = 'L'
            AND     SD.RECD_STATUS = 'L'
            AND     SM.OCCUR_DATE   = :occurDate
            AND     SM.SYS_CLASS    = :sysClass
            AND     SM.MU_CD        = :muCd
            AND     SM.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                          --  AND     B.TM_CD = :tmCd
                            )
        <#if ccCd?has_content>
            AND     SM.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(SM.UPJANG_CD) = :upjangCd
        </#if>
            ORDER BY SM.OCCUR_DATE
                    ,SM.SYS_CLASS
                    ,SM.UPJANG_CD
                    ,SM.RECEIPT_NUM
                    ,SD.SALS_CLASS
        ]]>
    </statement>
    
    <!-- 일마감 지불정보를 조회한다. -->
    <statement name="selectPayList" type="select">
        /*+ com.hwfs.rc.rcm.dao.CloseMgntDtlPopDAO.selectPayList */
        <![CDATA[
            SELECT  SP.OCCUR_DATE
                    ,SP.SYS_CLASS
                    ,SP.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = SP.UPJANG_CD
                    ) UPJANG_NM
                    ,SP.RECEIPT_NUM
                    ,SP.PAY_CD
                    ,SP.PAY_CD_NM
                    ,NVL(SP.AMT,0) PAY_AMT
            FROM    SLA_IF_UPJANG_PAYMENT SP
            WHERE   SP.RECD_STATUS = 'L'
            AND     SP.PAY_CD NOT IN ('2')
            AND     SP.OCCUR_DATE   = :occurDate
            AND     SP.SYS_CLASS    = :sysClass
            AND     SP.MU_CD        = :muCd
        <#if receiptNum?has_content>
            AND     SP.RECEIPT_NUM  = :receiptNum
        </#if>
        <#if tmCd?has_content>
            AND     SP.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     B.TM_CD = :tmCd
                            )
        </#if>
        <#if ccCd?has_content>
            AND     SP.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(SP.UPJANG_CD) = :upjangCd
        </#if>
            UNION ALL
            SELECT  CA.OCCUR_DATE
                    ,CA.SYS_CLASS
                    ,CA.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = CA.UPJANG_CD
                    )
                    ,CA.RECEIPT_NUM
                    ,CA.FRNC_STOR_NUM
                    ,'카드 : '||NVL((SELECT MAX(B.BUYCPNY_NM) FROM SLA_FRNC_STOR_MGMT A, SLA_BUY_CPNY_MGMT B WHERE A.BUYCPNY_CD = B.BUYCPNY_CD AND TO_NUMBER(REPLACE(A.FRNC_STOR_NUM,'-')) =TO_NUMBER(REPLACE(CA.FRNC_STOR_NUM,'-'))),'매입사없음')
                    ,NVL(CA.USE_AMT,0)
            FROM    SLA_IF_CARD_APPRV_INFO CA
            WHERE   CA.RECD_STATUS = 'L'
            AND     CA.DEAL_TYPE = '1'
            AND     CA.OCCUR_DATE   = :occurDate
            AND     CA.SYS_CLASS    = :sysClass
            AND     CA.MU_CD        = :muCd
        <#if receiptNum?has_content>
            AND     CA.RECEIPT_NUM  = :receiptNum
        </#if>
        <#if tmCd?has_content>
            AND     CA.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     B.TM_CD = :tmCd
                            )
        </#if>
        <#if ccCd?has_content>
            AND     CA.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(CA.UPJANG_CD) = :upjangCd
        </#if>
            ORDER BY OCCUR_DATE
                    ,SYS_CLASS
                    ,UPJANG_CD
                    ,RECEIPT_NUM
                    ,PAY_CD
        ]]>
    </statement>    
    
    <!-- 일마감 지불정보를 조회한다. -->
    <statement name="selectPayListMag" type="select">
        /*+ com.hwfs.rc.rcm.dao.CloseMgntDtlPopDAO.selectPayList */
        <![CDATA[
            SELECT  SP.OCCUR_DATE
                    ,SP.SYS_CLASS
                    ,SP.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = SP.UPJANG_CD
                    ) UPJANG_NM
                    ,SP.RECEIPT_NUM
                    ,SP.PAY_CD
                    ,SP.PAY_CD_NM
                    ,NVL(SP.AMT,0) PAY_AMT
            FROM    SLA_IF_UPJANG_PAYMENT SP
            WHERE   SP.RECD_STATUS = 'L'
            AND     SP.PAY_CD NOT IN ('2')
            AND     SP.OCCUR_DATE   = :occurDate
            AND     SP.SYS_CLASS    = :sysClass
            AND     SP.MU_CD        = :muCd
        <#if receiptNum?has_content>
            AND     SP.RECEIPT_NUM  = :receiptNum
        </#if>
            AND     SP.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                           -- AND     B.TM_CD = :tmCd
                            )
        <#if ccCd?has_content>
            AND     SP.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(SP.UPJANG_CD) = :upjangCd
        </#if>
            UNION ALL
            SELECT  CA.OCCUR_DATE
                    ,CA.SYS_CLASS
                    ,CA.UPJANG_CD
                    ,(
                    SELECT  UP.UPJANGNM
                    FROM    ST_UPJANG UP
                    WHERE   UP.UPJANG = CA.UPJANG_CD
                    )
                    ,CA.RECEIPT_NUM
                    ,CA.FRNC_STOR_NUM
                    ,'카드 : '||NVL((
                    SELECT  DISTINCT BUYCPNY_NM
                    FROM    SLA_FRNC_STOR_MGMT A
                            ,SLA_BUY_CPNY_MGMT B
                    WHERE   A.BUYCPNY_CD = B.BUYCPNY_CD
                    AND     A.FRNC_STOR_NUM = CA.FRNC_STOR_NUM
                    AND     A.CARD_CLASS = DECODE(CA.CARD_CLASS, '1','N','2','Y','3','G','4','O')
                    ),'매입사없음')
                    ,NVL(CA.USE_AMT,0)
            FROM    SLA_IF_CARD_APPRV_INFO CA
            WHERE   CA.RECD_STATUS = 'L'
            AND     CA.DEAL_TYPE = '1'
            AND     CA.OCCUR_DATE   = :occurDate
            AND     CA.SYS_CLASS    = :sysClass
            AND     CA.MU_CD        = :muCd
        <#if receiptNum?has_content>
            AND     CA.RECEIPT_NUM  = :receiptNum
        </#if>
            AND     CA.CC_CD IN (
                            SELECT  A.CC_CD
                            FROM    SCC_CC A
                                    ,HLDC_SC_DEPT_V B
                            WHERE   B.CC_CD = A.CC_CD
                            AND     A.START_DATE <= TO_CHAR(SYSDATE,'YYYYMMDD')
                            AND     A.END_DATE > TO_CHAR(SYSDATE,'YYYYMMDD')
                           -- AND     B.TM_CD = :tmCd
                            )
        <#if ccCd?has_content>
            AND     CA.CC_CD = :ccCd
        </#if>
        <#if upjangCd?has_content>
            AND     TO_CHAR(CA.UPJANG_CD) = :upjangCd
        </#if>
            ORDER BY OCCUR_DATE
                    ,SYS_CLASS
                    ,UPJANG_CD
                    ,RECEIPT_NUM
                    ,PAY_CD
        ]]>
    </statement>    
</hqml>

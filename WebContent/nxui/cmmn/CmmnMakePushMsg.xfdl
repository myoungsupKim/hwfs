        <Button id="btnComplete" taborder="27" text="전송" onclick="btnComplete_onclick" cssclass="btn_WF_Function" left="275" top="411" width="65" height="47"/>
        <Button id="btnCancel" taborder="28" text="취소" onclick="btnCancel_onclick" cssclass="btn_WF_Function" left="345" top="411" width="65" height="47"/>
        <Button id="btnClose" taborder="10" cssclass="btn_POP_XBtn" top="0" width="70" height="70" onclick="btnClose_onclick" titletext="수리(토너)신청 상세" right="0"/>
        <Static id="Static04" taborder="30" text="알림 제목" cssclass="sta_WF_Label02" left="10" top="138" width="150" height="59"/>
        <Edit id="edTitle" taborder="31" left="156" top="144" width="254" height="47" displaynulltext="제목을 입력하세요"/>
        <Static id="staText" taborder="33" text="※ 입력불가 문자는 { } &quot; &quot; 입니다." left="10" top="80" width="400" height="59" style="linespace:5;border:0 none #808080ff ;color:#f26c38ff;"/>

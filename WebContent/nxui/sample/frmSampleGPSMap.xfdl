        <Button id="Button00" taborder="0" text="현재위치" left="72.59%" top="16" right="3.7%" height="50" onclick="Button00_onclick"/>
        <Map id="Map00" left="9" top="73" height="608" width="512" onload="Map00_onload" onerror="Map00_onerror"/>
        <Button id="Button01" taborder="1" text="MapTest" left="42.96%" top="16" right="33.33%" height="50" onclick="Button01_onclick"/>
      </Layout>

<?xml version="1.0" encoding="utf-8"?>
<FDL version="1.4">
  <TypeDefinition url="..\default_typedef.xml"/>
  <Form id="ObjCalMonth" classname="commonCalMonth" inheritanceid="" position="absolute 0 0 100 21" titletext="월력" taborder="0" scrollbars="none">
    <Layouts>
      <Layout>
        <MaskEdit id="mae_cal" taborder="0" text="1234567890" position="absolute 0 0 100 21" mask="####-##" type="string" onchar="mae_cal_onchar" trimtype="both" maskchar=" " autoselect="true" visible="true" anchor="all" onkillfocus="mae_cal_onkillfocus" onkeydown="mae_cal_onkeydown" class="msk_WF_Cal"/>
        <Button id="btn_cal" taborder="1" position="absolute 79 0 100 21" style="pusheddrawoffset:0 0;" onclick="btn_cal_onclick" visible="true" anchor="top right" tabstop="false" class="btn_WF_cal"/>
        <PopupDiv id="pdv_calMonthPop" url="cmn::ObjCalMonthPop.xfdl" visible="false" position="absolute 0 21 168 202"/>
      </Layout>
    </Layouts>
    <Bind/>
    <Objects/>
    <Script type="xscript4.0"><![CDATA[/*
  화 면 명 : 월력
  파 일 명 : ObjCalMonth.xfdl
  기    능 : 월력 Composite 콤포넌트

    수정일    수정자                  수정내용
  ----------   -------  --------------------------------------------------
  2014.11.01   김윤기   최초 생성
*/

/************************************************************************************************
 * 공통 라이브러리 INCLUDE 영역 (필수)
************************************************************************************************/
include "lib::lib_com.xjs";


/************************************************************************************************
 * FORM 변수 선언 영역 (필수)
************************************************************************************************/
var fv_objForm;
var fv_sCallbackFunction;


/************************************************************************************************
 * 사용자 FUNCTION 영역 (필수)
************************************************************************************************/
/*------------------------------------------------------------------------------
 * 기   능 : 월력 초기화
 * 인   수 : objForm - 호출한 From
              sDay - 년월(필수)
              sCallbackFunction - 값 변경시 실행할 함수명
              objDs - binding할 Dataset
              sColName - binding할 Dataset의 Column명
 * 리   턴: 없음
---------- ---------------------------------------------------------------------*/
function fn_initMonthCal(objForm, sDay, sCallbackFunction, objDs, sColName, sEssential)
{	
	// 호출한 Form 저장
	fv_objForm = objForm;
	
	// Binding 처리
    if(!gfn_isNull(objDs) && !gfn_isNull(objDs))
    {
		fn_setBind(objDs, sColName);
    }

	// 필수 조건 처리
    if(!gfn_isNull(sEssential) && sEssential == "Y")
    {
		mae_cal.class = "msk_WF_CalEssential";
		btn_cal.class = "btn_WF_calEssential";
    }
        
	//초기날짜 셋팅
    fn_setValue(sDay);	          					
    
    //callback 셋팅
    fv_sCallbackFunction = sCallbackFunction;
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 월력 value 지정
 *---------------------------------------------------------------------------------------------*/
function fn_setValue(sDay) 
{
	if (gfn_isNull(sDay)) sDay = fn_getValue();
	mae_cal.value = sDay;

	if (gfn_isNull(sDay)) return;	
	if (!gfn_isDate6(sDay)) 
	{
		gfn_alert("msg.err.validator.date",sDay);	// $1 은(는) 유효하지 않은 날짜 형식입니다.
		mae_cal.value = gfn_today().substr(0,6);
		return;
	}

	// 외부에서 text값으로 값을 가져갈 수 있음
	this.text = sDay;
	
	// Callback함수 있을때 form의 함수 실행
	if(!gfn_isNull(fv_sCallbackFunction))
	{
		eval(fv_sCallbackFunction + "()");
	}
}

/*------------------------------------------------------------------------------
 * 기   능:		Parent의 데이타셋과 bind처리
 * 인   수:		objDs    - bind할 데이타셋(필수)
 *              sColName - bind할 데이타셋의 컬럼ID(필수)
 * 리   턴: 	없음
-------------------------------------------------------------------------------*/
function fn_setBind(objDs, sColName) 
{
	var obj = new BindItem("monthCalendar","mae_cal","value",objDs.name,sColName);
    this.addChild(obj.name, obj);
    obj.bind();
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 월력 value 리턴
 *---------------------------------------------------------------------------------------------*/
function fn_getValue() 
{
	return mae_cal.value;
}

/*----------------------------------------------------------------------------------------------
 * 설명      : 월력 text 리턴
 *---------------------------------------------------------------------------------------------*/
function fn_getText() 
{
	return mae_cal.text;
}


/************************************************************************************************
 * 각 COMPONENT 별 EVENT 영역 (필수)
************************************************************************************************/
/*----------------------------------------------------------------------------------------------
 * 설명      : 월력 PopupDiv 호출
 *---------------------------------------------------------------------------------------------*/
function btn_cal_onclick(obj:Button,  e:ClickEventInfo) 
{
	pdv_calMonthPop.fn_setCalendar(fn_getValue().substring(0,6));
	
	var nX = -1;
	var nY = mae_cal.position.height - 1;

 	var sRet = pdv_calMonthPop.trackPopupByComponent(mae_cal, nX, nY);
	fn_setValue(sRet);
}


/*-------------------------------------------------------------------------------------------------+
 * 기   능:		입력시 오입력 방지
+-------------------------------------------------------------------------------------------------*/
function mae_cal_onchar(obj:MaskEdit,  e:CharEventInfo) 
{
	var sDate = e.posttext;
	if (!gfn_isNum(sDate))	return false;
	
	var sMonth	= parseInt(sDate.substr(4));	
	if (sDate.length == 5)	{
		if (sMonth != 0 && sMonth != 1)	return false;
	} 
	else if (sDate.length == 6) {
		if (sMonth <= 0 || sMonth >= 13)	return false;
	}
}

/*-------------------------------------------------------------------------------------------------+
>>  기   능:		월력 focus 없어질때 월력 value 지정
+-------------------------------------------------------------------------------------------------*/
function mae_cal_onkillfocus(obj:MaskEdit, e:KillFocusEventInfo)
{
	// 단축값 설정
	var strDate  = obj.value;
	var currday  = gfn_today();
	var currleng = strDate.length;
	
	switch(currleng)
	{
		case 1:
			obj.value = gfn_subStr(currday,0,4)+"0"+strDate;
			break;
		case 2:
			obj.value = gfn_subStr(currday,0,4)+strDate;
			break;
		case 3:
			obj.value = gfn_subStr(currday,0,3)+strDate;
			break;
		case 4:
			obj.value = gfn_subStr(currday,0,2)+strDate;
			break;
		case 5:
			obj.value = gfn_subStr(currday,0,1)+strDate;
			break;
		default:
			break;
	}
	
	// value 지정
	fn_setValue(fn_getValue());
}

function mae_cal_onkeydown(obj:MaskEdit, e:KeyEventInfo)
{
	// enter
	if (e.keycode == 13)
	{
		if(gfn_isNull(mae_cal.value)) btn_cal.click();
	}
}
]]></Script>
  </Form>
</FDL>

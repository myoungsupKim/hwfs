UPDATE MAS_TRX
SET    CUSTCD      = #CUSTCD#,
       TRX_DESC    = '(분할)' || REPLACE(TRX_DESC,'(분할)'),
       UUSER   = #g_EmpNo#,
       UDATE   = SYSDATE       
